<h2>
  ᠵᠠᠰᠠᠬᠤ
  <%= link_to @motd.f1,motd_path(@motd),class:'header-menu' %>&ensp;
</h2>
<span :class="text"><%= @mott.f1 %>
<% if @mott.f2.present? %>
  \<%= @mott.f2%><span>
<% end %>
<%= form_for @payunit, url: motd_mott_payunit_path(@motd,@mott,@payunit) do |f| %>
    <table>
      <tr>
        <td>
          <p>
            <%=f.number_field :f4, step:0.1,placeholder: '1.0' %>
            <br>
            <%=f.text_area :name,placeholder: 'ᠤᠯᠤᠰ', :class=>"bgarea" %><br>ᠵᠣᠭᠤᠰ
          </p>
        </td>
        <td>
          <br>
          <p>
            ᠨᠡᠢᠲᠡᠯᠡᠬᠦ ᠬᠤᠭᠤᠴᠠᠭ᠎ᠠ<br>
            <%= f.datetime_select :f6, class: "datetimet", :use_month_numbers => true, minute_step: 10, datetime_separator:' ',:time_separator => ' ' %>
            <br>~<br>
            <%= f.datetime_select :f7, class: "datetimet", :use_month_numbers => true, minute_step: 10, datetime_separator:' ',:time_separator => ' ' %>
          </p>
        </td>
      </tr>
    </table>

    <p>
      <%= f.submit "ᠬᠠᠳᠠᠭᠠᠯᠠᠬᠤ", :class=>"btn" %>
    </p>

<% end %>
